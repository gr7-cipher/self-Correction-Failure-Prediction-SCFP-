{
  "model_name": "microsoft/deberta-v3-base",
  "learning_rate": 2e-5,
  "num_epochs": 5,
  "batch_size": 16,
  "max_length": 1024,
  "warmup_ratio": 0.1,
  "weight_decay": 0.01,
  "dropout_rate": 0.1,
  "use_specialized_attention": true,
  "use_class_weights": true,
  "fp16": true,
  "gradient_accumulation_steps": 1,
  "max_grad_norm": 1.0,
  "early_stopping_patience": 3,
  "save_steps": 1000,
  "eval_steps": 500,
  "logging_steps": 100,
  "seed": 42,
  "dataloader_num_workers": 4,
  "output_dir": "./models/deberta",
  "loss_config": {
    "binary_weight": 1.0,
    "multiclass_weight": 1.0,
    "confidence_weight": 0.5,
    "temperature": 1.0
  },
  "optimizer": {
    "type": "AdamW",
    "betas": [0.9, 0.999],
    "eps": 1e-8
  },
  "scheduler": {
    "type": "linear",
    "warmup_steps": null
  }
}
